<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popUpFragContainer"
    android:layout_width="350dp"
    android:layout_height="550dp"
    android:background="@drawable/popfrag"
    android:layout_gravity="center"
    tools:context=".CreatPopUpFragment"
    >


    <Button
        android:id="@+id/btnCreateTransaction"
        android:layout_width="250dp"
        android:layout_height="74dp"
        android:layout_marginBottom="152dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/chakra_petch_bold"
        android:text="Create transaction"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateCategory"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="#283D36"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/btnCreateCategory"
        android:layout_width="250dp"
        android:layout_height="74dp"
        android:layout_marginTop="184dp"
        android:backgroundTint="@android:color/transparent"
        app:strokeColor="#283D36"
        app:strokeWidth="3dp"
        android:fontFamily="@font/chakra_petch_bold"
        android:text="Create category"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>