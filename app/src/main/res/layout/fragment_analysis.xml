<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/analysisContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".AnalysisFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtSetBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:fontFamily="@font/chakra_petch_bold"
                android:text="Analysis"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:layout_gravity="center"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">

                    <!-- Card 1: Total Expense -->

                    <!-- Card 2: Total Income -->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="245dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/biggerbackground">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:text="TOTAL CURRENT EXPENSES:"
                            android:textAlignment="center"
                            android:textSize="22sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txtTotalExpensesData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/chakra_petch_bold"
                            android:gravity="center"
                            android:text="R 0.00"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="245dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/biggerbackground">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="TOTAL CURRENT INCOME:"
                            android:textSize="22sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txtTotalIncomeData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/chakra_petch_bold"
                            android:text="R 0.00"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            app:layout_constraintTop_toBottomOf="@id/textView2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Card 3: Highest Current Expense -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="245dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/biggerbackground">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="HIGHEST CURRENT EXPENSE:"
                            android:textSize="22sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txtHighestExpenseData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/chakra_petch_bold"
                            android:text="R 0.00"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            app:layout_constraintTop_toBottomOf="@id/textView3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Card 4: Lowest Current Expense -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="245dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/biggerbackground">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="LOWEST CURRENT EXPENSE:"
                            android:textSize="22sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txtLowestExpenseData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/chakra_petch_bold"
                            android:text="R 0.00"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            app:layout_constraintTop_toBottomOf="@id/textView4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Card 5: Highest Current Income -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="245dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/biggerbackground">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="HIGHEST CURRENT INCOME:"
                            android:textSize="22sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txtHighestIncomeData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/chakra_petch_bold"
                            android:text="R 0.00"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            app:layout_constraintTop_toBottomOf="@id/textView5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Card 6: Lowest Current Income -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="245dp"
                        android:layout_height="160dp"
                        android:background="@drawable/biggerbackground">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="LOWEST CURRENT INCOME:"
                            android:textSize="22sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txtLowestIncomeData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/chakra_petch_bold"
                            android:text="R 0.00"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textAlignment="center"
                            app:layout_constraintTop_toBottomOf="@id/textView6"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </HorizontalScrollView>


            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/statusBar"
                android:layout_width="335dp"
                android:layout_height="235dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp">

            </com.github.mikephil.charting.charts.BarChart>

            <TableLayout
                android:id="@+id/tableLayoutBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:stretchColumns="*"
                android:layout_marginTop="30dp">

        <!-- Static Header Row -->
        <TableRow
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Category"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Amount"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Data rows added programmatically -->
    </TableLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
